<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:@book,url: books_path(@book.id),method: :patch do |f| %>
<h5 class="edit-title">Title</h5>
<%= f.text_field :title %>
<h5 class="edit-body">Body</h5>
<%= f.text_area :body %>

<div class="update-book"><%= f.submit 'Update Book' %></div>

<span class="show-link"><%= link_to "Show",book_path(@book.id) %></span>
<span>|</span>
<span class="back-link"><%= link_to "Back","/books" %></span>
<% end %>
