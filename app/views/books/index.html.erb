<body>

  <h1 class="index-heading">Books</h1>

    <p>Title</p>
    <p>Body</p>

      <% @books.each do |book| %>
      <div class="all">

        <span class="title"><%= book.title %></span>

        <span class="body"><%= book.body %></span>

        <span class="show"><%= link_to "Show",book_path(book.id) %></span>
        <span class="edit"><%= link_to "Edit",edit_book_path(book.id) %></span>
        <span class="destroy"><%= link_to "Destroy",books_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %></span>
      </div>
      <% end %>





</body>

<h2 class="new">New Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!--form_with部分-->
<%= form_with model: Book.new,url:'/books',method: :post do |f| %>
<h4 class="input">Title</h4>
<%= f.text_field :title %>
<h4 class="input">Body</h4>
<%= f.text_area :body %>

<div class="create"><%= f.submit 'Create Book' %></div>

<% end %>
