<body>

  <h1>Books</h1>
    
    <p>Title</p>
    <p>Body</p>
    
    <div class=books>
      <% @books.each do |book| %>
      <div class=titles>
        
        <%= book.title %>
        
      </div>
      <div class=bodies>
        
        <%= book.body %>
        
      </div>
      <% end %>
    </div>
      
      
  </div>

</body>

<h2>New Book</h2>
<!--form_with部分-->
<%= form_with model: Book.new,url:'/books',method: :post do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>
