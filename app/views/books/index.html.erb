<body>

  <h1>Books</h1>

  <div class="blog">
    <p>Title</p>
    <% @books.each do |book| %>
    <%= book.title %>
    <% end %>

    <p>body</p>
    <% @books.each do |book| %>
    <%= book.body %>
    <% end %>
  </div>

</body>

<h2>New Book</h2>
<!--form_with部分-->
<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>
